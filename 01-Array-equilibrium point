#include <stdio.h>
int firstEquilibrium(int arr[], int n)
{
    int p=0;
    while(p<=n-1)
    {
        int left=0;
        int right=0;
        for(int i=0;i<=n-1;i++)
        {
            if(i<p)
            {
                left+=arr[i];
            }
            else if(i>p)
            {
                right +=arr[i];
            }
            
        }
        
        if(left == right)
        {
            return p;
        }
        
        p++;
    }
    return -1;
}// function declaration


************************************************************************************************************************   alternative(time optimization)
int firstEquilibrium(int arr[], int n)
{
    int total = 0;
    for(int i = 0; i < n; i++)
        total += arr[i];

    int left = 0;

    for(int i = 0; i < n; i++)
    {
        int right = total - left - arr[i];

        if(left == right)
            return i;

        left += arr[i];
    }

    return -1;
}



int main() 
{
    int arr[] = {1, 2, 6, 4, 0, -1};
    int n = sizeof(arr) / sizeof(arr[0]);

    int result = firstEquilibrium(arr, n);

    if(result == -1)
        printf("No Equilibrium Index\n");
    else
        printf("First Equilibrium Index: %d\n", result);

    return 0;
}
