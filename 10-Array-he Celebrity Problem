class Solution:
    def celebrity(self, mat):
        n = len(mat)

        for i in range(n):
            zero_count = 0
            one_count = 0

            for j in range(n):
                if i != j:
                    if mat[i][j] == 0:
                        zero_count += 1

                    if mat[j][i] == 1:
                        one_count += 1

            if zero_count == n - 1 and one_count == n - 1:
                return i

        return -1
