// Online C compiler to run C program online
#include <stdio.h>

int peakElement(int arr[], int n)
{
    int left;
    int right;
    for(int i=0; i<=n-1;i++)
    {
        if(i==0)
        {
            left = -2147483648;  
        }
        else
        {
            left = arr[i-1];
        }
        if(i==n-1)
        {
            right = 2147483648;  
        }
        else
        {
            right = arr[i+1];
        }
        if(arr[i]>right && arr[i]>left)
        {
            return 1;
        }
    }
    return -1;
}

int main()
{
    int arr[] = {10, 20, 15, 2, 23, 90, 80};
    int n = sizeof(arr) / sizeof(arr[0]);

    int index = peakElement(arr, n);

    if(index != -1)
        printf("Peak element found at index: %d\n", index);
    else
        printf("No peak element found\n");

    return 0;
}
